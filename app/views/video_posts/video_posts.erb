<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<% if logged_in? %>

<div id="userNav">
  <h3>Welcome, <%= @user.username %></h3>
  <a href="/logout">Log Out</a>
  <a href="/video-posts/new">Create Post</a>
  <a href="/video-posts/liked-video-posts">My Liked Videos</a>
  <a href="/video-posts/created-video-posts">My Created Video Posts</a>
</div>

<% else %>

<a href="/login">Log In</a>
<a href="/signup">Sign Up</a>

<% end %>

<h2>Lixer Feed</h2>
<ul>
  <% VideoPost.all.each do |videopost| %>
  <li>
    <a href="/video-posts/<%= videopost.id %>"><%= videopost.title %></a>
    <iframe width="420" height="345" src="<%= videopost.video_link %>">
</iframe>
  </li>
  <% end %>
</ul>