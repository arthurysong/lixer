<h1>Create Video Post</h1>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<form id="new-form" action="/video-posts" method="POST" enctype="multipart/form-data">
  <label for="title">Title: </label>
  <input type="text" name="title" id="title">
  <br>
  <label for="video">Upload File</label>
  <input type="file" name="video" id="video">
  <br>
  <textarea rows="3" cols="60" name="description" id="description" from="new-form" placeholder="Enter Description Here..."></textarea>
  <br>
  <input type="submit" value="Create Video Post">
</form>