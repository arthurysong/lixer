<h1>Create Video Post</h1>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<form action="/video-posts" method="POST" enctype="multipart/form-data">
  <label for="title">Title: </label>
  <input type="text" name="title" id="title">
  <br>
  <label for="video">Upload File</label>
  <input type="file" name="video" id="video">
  <br>
  <label for="video_link">Link of Video:</label>
  <input type="text" name="video_link" id="video_link">
  <br>
  <input type="submit" value="Create Video Post">
</form>