<h2>Create Video Post</h2>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<form action="/video-posts" method="POST">
  <label for="title">Title: </label>
  <input type="text" name="title" id="title">
  <br>
  <label for="video_file">Upload File</label>
  <input type="file" name="video_file" id="video_file">
  <br>
  <label for="video_link">Link of Video:</label>
  <input type="text" name="video_link" id="video_link">
  <br>
  <input type="submit" value="Create Video Post">
</form>